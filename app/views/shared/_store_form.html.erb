<div class="text-center green-font">
  <%= form_for @user, url: user_path do |f| %>
    <h4><%= f.label :store_name %></h4>
    <h4><%= f.text_field :store_name %></h4>
    <h4><%= f.label :description %></h4>
    <h4><%= f.text_field :description %></h4>
    <h4><%= f.label :image_url %></h4>
    <h4><%= f.text_field :image_url %></h4>
    <%= f.submit button_text, class: "btn btn-success btn-font-size" %>
  <% end %>
</div>
