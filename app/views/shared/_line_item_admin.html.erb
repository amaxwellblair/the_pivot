<% if line_item_admin.item.store.id == current_user.store.id %>
  <div class="cart-item-container">
    <div class="col-md-3 cart-item-image">
      <%= image_tag line_item_admin.item.image,  alt: line_item_admin.item.title %>
    </div>
    <div class="col-md-6 cart-item-description">
      <h3><%= link_to "#{line_item_admin.item.title}", store_item_path(line_item_admin.item.store.slug, line_item_admin.item.id) %></h3>
      <h4><%= line_item_admin.item.description %></h4>
      <p class="btn-pricing"><%= format_price(line_item_admin.item.price) %></p>
      <p class="btn-pricing">Qty.
        <%= line_item_admin.quantity %></p>
    </div>
    <div class="col-md-12 item-subtotal text-right">
      <h5 class="green-font">
        Subtotal:
        <%= format_price(line_item_admin.subtotal) %>
      </h5>
    </div>
  </div>
<% end %>
