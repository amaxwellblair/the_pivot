<div class="well">
  <div class="text-center mousiness green-font">
    <%= form_for(@user) do |f| %>
      <h4><%= f.label :username %></h4>
      <h4><%= f.text_field :username %></h4>
      <h4><%= f.label :password %></h4>
      <h4><%= f.password_field :password %></h4>
      <%= f.submit "Create Account", class: "btn btn-success mousiness btn-font-size" %>
    <% end %>
  </div>
</div>
