<%= link_to "My Orders", orders_path %>
<div class = "row">
  <h1>Order #<%= @order.id %></h1>
  <h3>Status: <%= @order.status %></h3>
  <h3>Total: <%= @order.formatted_total %></h3>
  <h3>Date Submitted: <%= @order.formatted_date %></h3>
</div>
<div class="items">
  <% @order.line_items.each do |line_item| %>
  <div class="cart-item-container">
    <div class="col-md-3 cart-item-image">
      <img src="<%= line_item.item.image %>" alt="<%= line_item.item.title %>">
    </div>
    <div class="col-md-6 cart-item-description">
      <h3 class="mousiness"><%= link_to "#{line_item.item.title}", item_path(line_item.item.id) %></h3>
      <h4 class="mousiness"><%= line_item.item.description %></h4>
      <p class="btn-pricing"><%= line_item.item.formatted_price %></p>
      <p class="btn-pricing">Qty. <%= line_item.quantity %></p>
    </div>
    <div class="col-md-12 item-subtotal text-right">
      <h5 class= "mousiness green-font">
        Subtotal: <%= line_item.formatted_subtotal %>
      </h5>
    </div>
  </div>
  <% end %>
</div>
