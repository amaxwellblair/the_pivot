<div class="cart-container well">
  <div class="text-center row">
    <div class="padded-bottom">
      <h1 class="green-font mousiness">Your Cart</h1>
    </div>
    <div class="orders">
      <% @orders.each do |order| %>
        <p>Order #<%= order.id %></p>
        <p>Status: <%= order.status %></p>
        <p>Placed on: <%= order.created_at.strftime("%B %-d, %Y") %></p>
      <% end %>
    </div>
  </div>
  <div class="text-right row">
    <div class="padded-top">
      <h2 class="green-font mousiness padded-right">Total: <%= @cart.total %></h2>
    </div>
  </div>
</div>
