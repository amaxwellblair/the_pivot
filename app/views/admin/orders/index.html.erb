<div class="cart-container well">
  <div class="text-center row">
    <div class="padded-bottom">
      <h1 class="green-font mousiness">Your Orders</h1>
    </div>
    <table class="table table-condensed table-hover orders">
      <tr>
        <th>Order #</th>
        <th>Status</th>
        <th>Placed on</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to "##{order.id}", order_path(order.id) %></td>
          <td><%= order.status %></td>
          <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
        <tr>
      <% end %>
    </table>
  </div>
</div>
