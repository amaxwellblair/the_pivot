<div class="text-center row item">
  <div class="padded-bottom">
    <h1 class="green-font" ><%=# "#{@item.title}" %></h1>
  </div>
  <div class="col-md-4 cart-item-image">
    <%=# image_tag @item.image, alt: @item.title %>
  </div>
  <div class="col-md-8 cart-item-description">
    <h3><%=# @item.title %></h3>
    <h4><%=# @item.description %></h4>
    <p class="btn-pricing"><%=# format_price(@item.price) %></p>
  </div>
  <br>
  <div class="col-md-12">
    <h3><%=# add_to_cart_button(@item) %></h3>
  </div>
</div>
