<div class="container">
  <div class="text-center row padded-top padded-bottom">
    <h1 class="green-font" >Presented by <%= current_store.name %></h1>
    <h2><%= @item.title %></h2>
    <%= image_tag @item.image %>
    <h4><%= @item.description %></h4>
    <h4><%= format_price(@item.price) %></h4>
    <%= button_to "Add to Cart", cart_items_path(item_id: @item.id), class: "btn btn-success btn-font-size" %>
  </div>
</div>
