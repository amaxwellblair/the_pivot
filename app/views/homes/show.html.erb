<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "clover.png", alt: "Clover" %>
      <div class="carousel-caption mousiness">
        <h2>Buy now!</h2>
        <h4>You need luck</h4>
      </div>
    </div>
    <div class="item cat-div">
      <%= image_tag "lucky_cat.png", alt: "Lucky Cat", class: "cat" %>
      <div class="carousel-caption mousiness red-text">
        <h2>Maneki-neko says:</h2>
        <h4>Buy now to bring luck!</h4>
      </div>
    </div>
    <div class="item">
      <%= image_tag "lucky_charms.png",  alt: "Charms" %>
      <div class="carousel-caption mousiness">
        <h2>Lucky charms!</h2>
        <h4>Today can be your lucky day!</h4>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<div class="text-center row">
  <div class="padded-top padded-bottom">
    <h1 class="green-font mousiness" >Featured Collections</h1>
  </div>
  <div class="categories">
    <%= render partial: "categories/category", collection: @categories %>
  </div>
</div>
<div class="text-center row">
  <div class="padded-bottom padded-top">
    <h1 class="green-font mousiness" >Featured Items</h1>
  </div>
  <div class="items">
    <%= render partial: "items/item", collection: @items %>
  </div>
</div>
